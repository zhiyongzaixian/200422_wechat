/* pages/recommend/recommend.wxss */
.header {
  position: relative;
}
.header image {
  width: 100%;
  height: 300rpx;
}


.date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}


/* 列表区 */
.listContainer {
  position: relative;
  top: -30rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background: #fff;

}

.navHeader {
  height: 60rpx;
  line-height: 60rpx;
}
.navHeader .more {
  float: right;

}
.recommendScroll {
  height: calc(100vh - 420rpx);
}
.scrollItem {
  display: flex;
  margin-bottom: 20rpx;
}

.scrollItem image {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;

}

.musicInfo {
  display: flex;
  flex-direction: column;

}
.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.scrollItem .iconfont {
  position: absolute;
  right: 10rpx;
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
