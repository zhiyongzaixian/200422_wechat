<view class='indexContainer'>
  <!-- 主页banner区域 -->
  <swiper class="banner" indicator-dots indicator-color='ivory' indicator-active-color='#d43c33' circular>
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId" wx:for-item="bannerItem">
      <image src="{{bannerItem.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 五个图标导航区域 -->
