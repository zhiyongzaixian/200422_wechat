/* 
	stylus
	： 1.省略大括号
		 2.省略封号和冒号
		 3.支持样式嵌套
 
 */
.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 10rpx 0;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
}
.indexContainer .header .search {
  position: relative;
  width: 420rpx;
  height: 60rpx;
  background: #eee;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  font-size: 30rpx;
  top: 15rpx;
  left: 10rpx;
}
.indexContainer .header .search input {
  height: 60rpx;
  width: 370rpx;
  margin-left: 50rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 26rpx;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #bb2c08;
  padding: 0 4rpx;
  margin: 0 10rpx;
}
.indexContainer .navScroll {
  white-space: nowrap;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  font-size: 26rpx;
/* &: 父级引用， 代表所处位置的父级 */
}
.indexContainer .navScroll .navItem.active {
  border-bottom: 1rpx solid #bb2c08;
}
.indexContainer .contentScroll {
  height: calc(100vh - 160rpx);
}

