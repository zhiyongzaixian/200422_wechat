.categoryItem {
  margin-bottom: 20rpx;
}
.categoryItem .titlePic {
  width: 100%;
  height: 370rpx;
}
.categoryItem .shopListScroll {
  white-space: nowrap;
}
.categoryItem .shopListScroll .shopItem {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  vertical-align: top;
}
.categoryItem .shopListScroll .shopItem.more {
  width: 200rpx;
  height: 200rpx;
  background: #eee;
  line-height: 200rpx;
  text-align: center;
  font-size: 26rpx;
}
.categoryItem .shopListScroll .shopItem image {
  width: 200rpx;
  height: 200rpx;
  background: #eee;
}
.categoryItem .shopListScroll .shopItem view {
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
}

